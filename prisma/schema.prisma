// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Spellbook {
  id    Int     @id @default(autoincrement())
  title String  @unique
  description  String?
  spells Spell[]
}

model Spell {
  id        Int     @id @default(autoincrement())
  title     String
  description   String?
  image   String?
  spellbook    Spellbook    @relation(fields: [spellbookId], references: [id])
  spellbookId  Int
}